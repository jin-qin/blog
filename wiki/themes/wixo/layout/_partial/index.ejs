<div class="row page">
	<div class="col-md-12">
		<div class="panel-group">
		<div class="panel panel-default">
			<div class="panel-heading">
				<a class="panel-title" data-toggle="collapse" href="#about">
					<i class="fa fa-bookmark"></i> Introduction
				</a>
			</div>
			<!-- panel-heading -->
			<div id="about" class="panel-body in collapse" style="height: auto;">
				<div class="panel-inner" style="background-color:#E8FFFF">
					<p>This is my personal notebook, used to save some computer technologies and algorithms knowledge.</p>
					<p>It is really uesful to reorganize scattered knowledge, and form a good wiki system for myself.</p>
				</div>
			</div>
		</div>
		</div>

		<div class="panel-group" id="notebook">
			<% site.categories.sort('name').each(function(cat){ %>
				<div class="panel panel-default">
					<div class="panel-heading">
						<a class="panel-title collapsed" data-toggle="collapse" data-parent="#notebook" href="#<%= cat.name %>">
							<i class="fa fa-folder"></i>
							<%= cat.name %>
					</div>
					<% if (theme.fold) { %>
						<div id="<%= cat.name %>" class="panel-collapse collapse in">
							<% } else { %>
								<div id="<%= cat.name %>" class="panel-collapse collapse">
									<% } %>
										<div class="panel-body">
											<ul class="post">
												<% site.posts.sort('date', -1).each(function(it){ %>
													<% if (it.categories.length == 1 && it.categories.data[0]._id == cat._id){ %>
														<li class="post-list-item">
															<a href="<%= config.root %><%= "wiki/"+it.path %>">
																<%= it.title %>
															</a>
														</li>
														<% } %>
															<% }); %>
											</ul>
										</div>
								</div>
						</div>
						<% }); %>
							<% var has_scratch = -1 %>
								<% site.posts.sort('date', -1).each(function(it){ %>
									<% if (has_scratch == -1 && it.categories.length == 0) { %>
										<% has_scratch = 1 %>
											<div class="panel panel-default">
												<div class="panel-heading">
													<a class="panel-title collapsed" data-toggle="collapse" data-parent="#notebook" href="#<%= theme.scratch_name %>">
														<i class="fa fa-folder"></i>
														<%= theme.scratch_name %>
												</div>
												<% if (theme.fold) { %>
													<div id="<%= theme.scratch_name %>" class="panel-collapse collapse in">
														<% } else { %>
															<div id="<%= theme.scratch_name %>" class="panel-collapse collapse">
																<% } %>
																	<div class="panel-body">
																		<ul class="post">
																			<% return %>
																				<% } %>
																					<% }); %>
																						<% if (has_scratch == 1) { %>
																							<% site.posts.sort('date', -1).each(function(it){ %>
																								<% if (it.categories.length == 0){ %>
																									<li class="post-list-item">
																										<a href="<%= config.root %><%= "wiki/"+it.path %>">
																											<%= it.title %>
																										</a>
																									</li>
																									<% } %>
																										<% }); %>
																		</ul>
																	</div>
															</div>
													</div>
													<% } %>
											</div>
											<!-- accordion -->
				</div>
		</div>